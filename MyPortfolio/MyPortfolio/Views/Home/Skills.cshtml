<!-- Skills.cshtml -->
@{
    ViewBag.Title = "Skills";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        /* Custom CSS for Skills section */
        #skills {
            padding: 50px 0;
        }

        #skills h2 {
            font-family: "Poppins", sans-serif;
            text-align: center;
            margin-bottom: 30px;
            color: #333;
        }

        .skills-list {
            list-style: none;
            padding: 0;
        }

        .skills-list li {
            margin-bottom: 10px;
            font-size: 18px;
            color: #555;
        }

        .skills-list li:before {
            content: '\2022'; /* Bullet character */
            color: #007bff; /* Bullet color */
            font-weight: bold;
            display: inline-block;
            width: 1em;
            margin-left: -1em;
        }
        .container{
            background-color: #E2EAF4;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <section id="skills" class="container">
        <h2>Skills</h2>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <ul class="skills-list">
                    <li>Azure AI</li>
                    <li>.NET API</li>
                    <li>.NET MVC</li>
                    <li>C#</li>
                    <li>HTML</li>
                    <li>CSS</li>
                    <li>JavaScript</li>
                    <li>Responsive Design</li>
                </ul>
            </div>
        </div>
    </section>
</body>
</html>
